{
  "manifest_version": 3,
  "name": "ChatGPT Team Sync",
  "version": "1.3.0",
  "description": "Automatically sync ChatGPT Team members to your dashboard",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://cpmtbnsujfdumwdmsdrc.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/admin/members*",
        "https://chatgpt.com/admin/*/members*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
